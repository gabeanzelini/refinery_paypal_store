<% content_for :body_content_title do %>
  <%= t('plugins.refinery_paypal_store.title') %>
<% end %>

<% content_for :body_content_left do %>
  <%= @page[:body] if @products.offset == 0 %>

  <% if @products.any? %>
    <% @products.each do |item| %>
      <article class="product_truncated">
      <%= image_tag(item.image.thumbnail('175x175').url) if item.image%>
        <h3><%= item.name %></h3>
        <p>
        <%= item.price %>
        <small><%= item.description %></small>
        <%= item.paypal_button.html_safe %>
        </p>
      </article>
    <% end %>

    <%= will_paginate(@products) %>
  <% else %>
    <p><em><%= t('.no_items_yet') %></em></p>
  <% end %>
<% end -%>

<%= render :partial => "/shared/content_page" %>
