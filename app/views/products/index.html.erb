<h1 class="full">Morton General Gift Shop</h1>

<% content_for :body_content_title do %>
  <%= t('plugins.refinery_paypal_store.title') %>
<% end %>

<% content_for :body_content_left do %>
  <%= @page[:body] if @products.offset == 0 %>

  <% if @products.any? %>
    <% @products.each do |item| %>
      <article class="product_truncated clearfix">
        <div class="img">
          <%= image_tag(item.image.thumbnail('175x175').url) if item.image%>
        </div>
        <div class="details">
          <h3><%= item.name %></h3>
          <span class="price"><%= "$%.2f" % item.price %></span>
          <p><%= item.description %></p>
          <p><%=raw item.paypal_button %>
        </div>
      </article>
    <% end %>

    <%= will_paginate(@products) %>
  <% else %>
    <p><em><%= t('.no_items_yet') %></em></p>
  <% end %>
<% end -%>

<%= render :partial => "/shared/content_page" %>

<% content_For :jq_ready do %>
  $(function(){
    $('form[target=paypal]').submit(function(){
      alert("Please fill in the room number at the end of checking out.")
      return true
    })
  })
<% end %>
