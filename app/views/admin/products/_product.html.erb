<li class='clearfix record <%= cycle("on", "on-hover") %>'>
  <span class='title'>
    <%= product.name %>
    <span class="preview">
      <%= t('.product_date') %> <%= l(product.product_date, :format => :short) %>
    </span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag('application_go.png'), product_url(product),
                :title => t('.view_live_html'),
                :target => "_blank" %>
    <%= link_to refinery_icon_tag('application_edit.png'), edit_admin_product_path(product),
                :title => t('.edit') %>
    <%= link_to refinery_icon_tag('delete.png'), admin_product_path(product),
                :class => "cancel confirm-delete",
                :title => t('.delete'),
                :method => :delete,
                :confirm => t('shared.admin.delete.message', :title => product.name) %>
  </span>
</li>
